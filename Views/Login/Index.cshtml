@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es-co">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio Sesión LegacyTest</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="~/css/legacy-bootstrap.css" rel="stylesheet" />
    <link href="~/css/legacy-color.css" rel="stylesheet" />
    <link href="~/css/legacy-home.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body>
    <main>
        <div class="container px-4 pt-5">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card shadow-lg  mt-5  bg-light">
                        <div class="card-header bg-blue2 align-content-center">                            
                            <img src="~/img/logo-legacytest-white.svg" alt="SVG" class="mx-auto d-block p-3 w-75 img-fluid"/>
                        </div>
                        <div class="card-body">
                            <form id="formLogin">
                                <div class="form-group mb-3">
                                    <label>Correo electrónico</label>
                                    <input id="email" name="email" class="form-control" placeholder="Correo electrónico" type="text" required autofocus>
                                </div>

                             @*    <div class="form-group mb-3">
                                    <label for="Contrasena">Contraseña</label>
                                    <input id="pswd" name="pswd" class="form-control" placeholder="Contraseña" type="password" required autofocus />
                                </div> *@

                                <div class="form-group mb-3">
                                    <label class="form-label">Nueva contraseña:</label>
                                    <div class="input-group">
                                        <input id="pswd" name="pswd" class="form-control" placeholder="Contraseña" type="password" required autofocus />
                                        <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility('pswd', this)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-warning form-control  fw-bolder" onclick="return SessionForm(event)">Iniciar Sesión</button>
                            </form>

                        </div>
                        <div class="card-footer text-center pb-3">
                            <div class="row">
                                <div class="col-md-6 col-12 mb-2">
                                    <a class="btn btn-outline-primary w-100" asp-controller="Register" asp-action="ForgotPassword">
                                        ¿Olvidaste tu contraseña? <strong>Recupérala aquí</strong>
                                    </a>
                                </div>
                                <div class="col-md-6 col-12">
                                    <a class="btn btn-outline-secondary w-100" asp-controller="Register" asp-action="Index">
                                        ¿No tienes una cuenta? <strong>Regístrate aquí</strong>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
  <script src="~/js/home.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
