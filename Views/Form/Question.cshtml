
<header class="page-header page-header-dark degraded-special-3 pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">                        
                        <i class='bx bx-question-mark page-header-icon fs-1'></i>
                        Gestionar Pregunta
                    </h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-xl px-4 mt-n10">
    <div class="row">
        <div class="col-lg-4">
            <div id="solid">
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Component Preview-->
                        <div class="sbp-preview">
                            <div class="sbp-preview-content">
                                <form id="formQuestion" name="formFormulary">

                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Id</label>
                                        <input type="number" class="form-control">
                                    </div>

                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Texto Pregunta</label>
                                        <textarea type="text" class="form-control" name="Questiontext" id="Questiontext" 
                                                                            placeholder="Texto pregunta"></textarea>
                                    </div>


                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Formulario al que pertenece</label>                                       
                                        <select class="form-select" id="IdForm" name="IdForm">                                           
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Pregunta Padre</label>
                                        <select class="form-select" id="QuestionParent" name="QuestionParent">                                            
                                        </select>
                                    </div>
                                    
                                    <div class="container text-center">
                                        <div class="row justify-content-end">
                                            <div class="col-auto">
                                                <button class="btn btn-primary" onclick="SaveOrUpdate(event);">Guardar</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- Sticky Navigation-->
        <div class="col-lg-8">
            <div id="solid">
                <div class="card mb-4">
                    <div class="card-body">
                        <table class="table table-striped table-hover" id="tblQuestion" name="tblQuestion">
                            <thead class="pt-2">
                                <tr class="table-dark">
                                    <th scope="col">Id</th>
                                    <th scope="col">Texto Pregunta</th>
                                    <th scope="col">IdFormulario</th>
                                    <th scope="col">Formulario</th>
                                    <th scope="col">Pregunta Padre</th>                                   
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/question.js"></script>
}
