
<header class="page-header page-header-dark degraded-special-7 pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <i class='bx bx-category-alt page-header-icon fs-1'></i>                        
                        Gestionar Caracterización
                    </h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-xl px-4 mt-n10">
    <div class="row">
        <div class="col-lg-12">
            <div id="solid">
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Component Preview-->
                        <div class="sbp-preview">
                            <div class="sbp-preview-content">
                                <form id="formCharacterization" name="formCharacterization">
                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Id</label>
                                        <input type="number" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Caracterización</label>
                                        <textarea type="text" class="form-control" name="Characterization" id="Characterization"
                                                  placeholder="Caracterización"></textarea>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label for="" class="form-label text-primary">Criterio 1 a la que pertenece</label>
                                                <select class="form-select Criterion" id="IdCriterion1" name="IdCriterion1">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">                                           
                                            <div class="mb-3">
                                                <label for="" class="form-label text-primary">Clasificación</label>
                                                <textarea type="text" class="form-control" name="Clasification1" id="Clasification1"
                                                          placeholder="Clasificación primer criterio"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="" class="form-label text-primary">Rango mínimo</label>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="basic-addon1">&gt;=</span>
                                                <input type="number" class="form-control" placeholder="Mínimo" id="Min1" name="Min1">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="" class="form-label text-primary">Rango máximo</label>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="basic-addon1">&lt;=</span>
                                                <input type="number" class="form-control" placeholder="Máximo" id="Max1" name="Max1">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label for="" class="form-label text-primary">Criterio 2 a la que pertenece</label>
                                                <select class="form-select Criterion" id="IdCriterion2" name="IdCriterion2">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                           
                                            <div class="mb-3">
                                                <label for="" class="form-label text-primary">Clasificación</label>
                                                <textarea type="text" class="form-control" name="Clasification2" id="Clasification2"
                                                          placeholder="Clasificación segundo criterio"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="" class="form-label text-primary">Rango mínimo</label>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="basic-addon1">&gt;=</span>
                                                <input type="number" class="form-control" placeholder="Mínimo" id="Min2" name="Min2">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="" class="form-label text-primary">Rango máximo</label>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="basic-addon1">&lt;=</span>
                                                <input type="number" class="form-control" placeholder="Máximo" id="Max2" name="Max2">
                                            </div>
                                        </div>
                                    </div>
                                   

                                    <div class="container text-center">
                                        <div class="row justify-content-end">
                                            <div class="col-auto">
                                                <button class="btn btn-primary" onclick="SaveOrUpdate(event);">Guardar</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- Sticky Navigation-->
        <div class="col-lg-12">
            
                <div class="card mb-4">
                    <div class="card-body">
                        <table class="table table-striped table-hover" id="tblCharacterization" name="tblCharacterization">
                            <thead class="pt-2">
                            <tr class="table-dark">
                                    <th scope="col">Id</th>  
                                    <th scope="col">IdCriterio 1</th>
                                    <th scope="col">Criterio 1</th>
                                    <th scope="col">Clasificación 1</th>
                                    <th scope="col">Valor Mínimo</th>
                                    <th scope="col">Valor Máximo</th>
                                    <th scope="col">IdCriterio 2</th>
                                    <th scope="col">Criterio 2</th>
                                    <th scope="col">Clasificación 2</th>
                                    <th scope="col">Valor Mínimo</th>
                                    <th scope="col">Valor Máximo</th>
                                    <th scope="col">Caracterización</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/Characterization.js"></script>
}
