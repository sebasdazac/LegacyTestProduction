
<header class="page-header page-header-dark degraded-special-1 pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <i class='bx bx-flag page-header-icon fs-1'></i>
                        Gestionar Plan
                    </h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-xl px-4 mt-n10">
    <div class="row">
        <div class="col-lg-4">
            <div id="solid">
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Component Preview-->
                        <div class="sbp-preview">
                            <div class="sbp-preview-content">
                                <form id="formPlan" name="formPlan">

                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">id</label>
                                        <input type="number" class="form-control">
                                    </div>

                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Nombre Plan</label>
                                        <input type="text" class="form-control" name="NamePlan" id="NamePlan" placeholder="Nombre Plan">
                                    </div>

                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Valor Plan [$USD]</label>
                                        <input type="number" class="form-control" name="Price" id="Price" placeholder="Valor Plan [$USD]">
                                    </div>

                                    <div class="mb-2">
                                        <label for="" class="form-label text-primary">Estado</label>
                                        <select class="form-select" name="State" id="State">
                                            <option value="1">Activo</option>
                                            <option value="0">Inactivo</option>
                                        </select>
                                    </div>

                                    <div class="container text-center">
                                        <div class="row justify-content-end">
                                            <div class="col-auto">
                                                <button class="btn btn-primary" onclick="SaveOrUpdate(event);">Guardar</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- Sticky Navigation-->
        <div class="col-lg-8">
            <div id="solid">
                <div class="card mb-4">
                    <div class="card-body">
                        <table class="table table-striped table-hover" id="tblplan" name="tblplan">
                            <thead class="pt-2">
                                <tr class="table-dark">
                                    <th scope="col">Id</th>
                                    <th scope="col">Plan</th>
                                    <th scope="col">Precio [USD]</th>
                                    <th scope="col">Activo</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/plan.js"></script>
}
