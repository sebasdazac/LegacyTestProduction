
<header class="page-header page-header-dark degraded-special-6 pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <i class='bx bxs-collection page-header-icon fs-1'></i>                    
                        Gestionar Clasificación
                    </h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-xl px-4 mt-n10">
    <div class="row">
        <div class="col-lg-4">
            <div id="solid">
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Component Preview-->
                        <div class="sbp-preview">
                            <div class="sbp-preview-content">
                                <form id="formClasification" name="formClasification">
                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Id</label>
                                        <input type="number" class="form-control">
                                    </div>


                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Criterio a la que pertenece</label>
                                        <select class="form-select" id="IdCriterion" name="IdCriterion">
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Clasificación</label>
                                        <textarea type="text" class="form-control" name="Clasification" id="Clasification"
                                                  placeholder="Clasificación"></textarea>
                                    </div>


                                    <div class="mb-3">
                                        <label for="" class="form-label text-primary">Rango valores</label>
                                        <div class="input-group mb-3">                                            
                                            <span class="input-group-text" id="basic-addon1">&gt;=</span>
                                            <input type="number" class="form-control" placeholder="Mínimo" id="Min" name="Min">
                                        </div>
                                        <div class="input-group mb-3">
                                            
                                            <span class="input-group-text" id="basic-addon1">&lt;=</span>
                                            <input type="number" class="form-control" placeholder="Máximo" id="Max" name="Max">
                                        </div>
                                    </div>


                                    <div class="container text-center">
                                        <div class="row justify-content-end">
                                            <div class="col-auto">
                                                <button class="btn btn-primary" onclick="SaveOrUpdate(event);">Guardar</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- Sticky Navigation-->
        <div class="col-lg-8">
            <div id="solid">
                <div class="card mb-4">
                    <div class="card-body">
                        <table class="table table-striped table-hover" id="tblClasification" name="tblClasification">
                            <thead class="pt-2">
                                <tr class="table-dark">
                                    <th scope="col">Id</th>
                                    <th scope="col">Id Criterion</th>
                                    <th scope="col">Criterio</th>
                                    <th scope="col">Clasificación</th>
                                    <th scope="col">Valor Mínimo</th>
                                    <th scope="col">Valor Máximo</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/clasification.js"></script>
}
